<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
 
<log4j:configuration
    xmlns:log4j="http://jakarta.apache.org/log4j/">


    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
         <layout class="org.apache.log4j.PatternLayout">
              <param name="ConversionPattern" value="%d %p [%c{5}] %m [%X{userId}]%n" />
         </layout>  
    </appender>
    
    <!-- Application Loggers -->
    <logger name="sim.model.impl.stoage.common">
        <level value="info"/>
    </logger>
        <logger name="sim.model.impl.stoage.commom.CreateStoateEvent">
        <level value="info"/>
    </logger>
    
    <logger name="sim.model.impl.stoage.atc">
        <level value="info"/>
    </logger>
    
    <logger name="sim.model.impl.stoage.block">
        <level value="debug"/>
    </logger>
    
    <logger name="sim.model.impl.stoage.manager">
        <level value="info"/>
    </logger>


 
    <!-- Root Logger -->
    <root>
        <level value="debug" />
        <appender-ref ref="console" />
    </root>


    
</log4j:configuration>


